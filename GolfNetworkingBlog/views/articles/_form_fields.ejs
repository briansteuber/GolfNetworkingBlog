<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= article.title %>"required>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" cols="30" rows="10" required><%= article.description %></textarea>
</div>

<div class="form-group" hidden="true">
    <label for="comment">Comment: Optional</label>
    <textarea name="comment" id="comment" class="form-control" cols="30" rows="2"><%= article.comment %></textarea>
</div>

